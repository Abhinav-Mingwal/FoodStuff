<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#023436">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#023436">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFD23F"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:id="@+id/restraunt_name_screen"
            android:textSize="22dp"
            android:textColor="#023436"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/notfound"
            android:id="@+id/restaurant_thumbID_screen"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="#FFFFFF"
            android:text="Visit Us"
            android:background="@drawable/background_round_corner_button"
            android:id="@+id/Zomato_Link_screen"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="#00BFB3"
            android:textSize="20dp"
            android:textStyle="italic"
            android:id="@+id/restaurant_address_screen"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="#00BFB3"
            android:textSize="20dp"
            android:textStyle="italic"
            android:paddingBottom="10dp"
            android:id="@+id/restaurant_Locality_screen"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="#00BFB3"
            android:textSize="20dp"
            android:textStyle="italic"
            android:id="@+id/restaurant_City_screen"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="#00BFB3"
            android:textSize="20dp"
            android:textStyle="italic"
            android:id="@+id/restaurant_cuisines_screen"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="#00BFB3"
            android:textSize="20dp"
            android:textStyle="italic"
            android:id="@+id/restaurant_average_cost_for_two_screen"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="#00BFB3"
            android:textSize="20dp"
            android:textStyle="italic"
            android:id="@+id/restaurant_price_range_screen"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Menu_URL"
                android:layout_marginRight="20dp"
                android:text="Take A Look At Menu"
                android:textColor="#FFFFFF"
                android:gravity="center_horizontal|center_vertical"
                android:background="@drawable/background_round_corner_button"
                android:layout_weight="1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/BookButton"
                android:layout_marginLeft="20dp"
                android:textColor="#FFFFFF"
                android:gravity="center_horizontal|center_vertical"
                android:background="@drawable/background_round_corner_button"
                android:text="Book Table"
                android:layout_weight="1"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="#00BFB3"
            android:textSize="20dp"
            android:textStyle="italic"
            android:id="@+id/aggregate_screen"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="#00BFB3"
            android:textSize="20dp"
            android:textStyle="italic"
            android:id="@+id/rating_Text_screen"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="#00BFB3"
            android:textSize="20dp"
            android:textStyle="italic"
            android:id="@+id/votes_screen"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"/>

    </LinearLayout>
    </ScrollView>
