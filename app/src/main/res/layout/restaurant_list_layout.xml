<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/resaurant_list_layout"
    android:background="#023436">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFD23F"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:id="@+id/restraunt_name"
        android:textSize="22dp"
        android:textColor="#023436"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/notfound"
        android:id="@+id/restaurant_thumbID"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal|center_vertical"
        android:textColor="#FFFFFF"
        android:background="@drawable/background_round_corner_button"
        android:id="@+id/Zomato_Link"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="#00BFB3"
        android:textSize="20dp"
        android:textStyle="italic"
        android:id="@+id/restaurant_address"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="#00BFB3"
        android:textSize="20dp"
        android:textStyle="italic"
        android:paddingBottom="10dp"
        android:id="@+id/restaurant_Locality"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="#00BFB3"
        android:textSize="20dp"
        android:textStyle="italic"
        android:id="@+id/restaurant_City"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="#00BFB3"
        android:textSize="20dp"
        android:textStyle="italic"
        android:id="@+id/restaurant_cuisines"/>
